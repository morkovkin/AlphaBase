<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="500.0" prefWidth="1500.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.egor.database.alphabase.MainScreenController">
   <top>
      <MenuBar fx:id="menu" prefHeight="0.0" BorderPane.alignment="CENTER">
         <menus>
            <Menu mnemonicParsing="false" text="Файл">
               <items>
                  <MenuItem fx:id="menuNewContract" mnemonicParsing="false" text="Новый контракт" />
                  <MenuItem id="menuReport" mnemonicParsing="false" text="Создать отчет" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Помощь">
               <items>
                  <MenuItem fx:id="menuAbout" mnemonicParsing="false" text="О программе" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </top>
   <center>
      <TableView fx:id="contractsTableView" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
